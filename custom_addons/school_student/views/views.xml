                            </div>
                            <div class="oe_kanban_details d-flex flex-column">
                                <strong>
                                    <field name="name" />
                                </strong>
                                <ul>
                                    <li>Roll Number:- <field name="roll_number" /></li>
                                    <li>School:- <field name="school_id" /></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

